<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>GAT-Java-Plugin</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <!-- Use HTTPS version of SciJava repository -->
        <repository>
            <id>scijava.public</id>
            <name>SciJava Public Repository</name>
            <url>https://maven.scijava.org/content/groups/public</url>
        </repository>

        <!-- ImageJ repository with HTTPS -->
        <repository>
            <id>imagej.releases</id>
            <name>ImageJ Releases</name>
            <url>https://maven.scijava.org/content/repositories/releases</url>
        </repository>

        <!-- ImageJ snapshots with HTTPS -->
        <repository>
            <id>imagej.snapshots</id>
            <name>ImageJ Snapshots</name>
            <url>https://maven.scijava.org/content/repositories/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencies>
        <!-- Core ImageJ -->
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>ij</artifactId>
            <version>1.54p</version>
        </dependency>

        <!-- Material Design look-and-feel for Swing -->
        <dependency>
            <groupId>io.github.vincenzopalazzo</groupId>
            <artifactId>material-ui-swing</artifactId>
            <version>1.1.2</version>
        </dependency>

        <!-- ImageJ2 Core -->
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej</artifactId>
            <version>2.9.0</version>
        </dependency>

        <!-- ImageJ Ops for image processing operations -->
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej-ops</artifactId>
            <version>0.45.8</version>
        </dependency>

        <!-- CLIJ2 for GPU-accelerated image processing -->
        <dependency>
            <groupId>net.haesleinhuepf</groupId>
            <artifactId>clij2_</artifactId>
            <version>2.5.0.1</version>
        </dependency>

        <!-- CLIJ (original) -->
        <dependency>
            <groupId>net.haesleinhuepf</groupId>
            <artifactId>clij_</artifactId>
            <version>1.9.0.1</version>
        </dependency>

        <!-- ImageJ Legacy for compatibility -->
<!--        <dependency>-->
<!--            <groupId>net.imagej</groupId>-->
<!--            <artifactId>imagej-legacy</artifactId>-->
<!--            <version>0.37.5</version>-->
<!--        </dependency>-->

        <!-- Bio-Formats for reading various image formats -->
        <dependency>
            <groupId>ome</groupId>
            <artifactId>formats-gpl</artifactId>
            <version>6.8.1</version>
        </dependency>

        <!-- Try to add some Fiji components individually instead of the full fiji pom -->
        <dependency>
            <groupId>sc.fiji</groupId>
            <artifactId>fiji-lib</artifactId>
            <version>2.1.1</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!-- Ensure we compile for Java 8 -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>

            <!-- Produce a "fat" JAR including all dependencies -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>